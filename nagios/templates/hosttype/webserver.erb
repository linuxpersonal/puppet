define host{
            use                     linux-server,host-pnp
            host_name               <%= @hostname %>
            alias                   <%= @hostname %>
            address                 <%= @ipaddress %>
}

define service{
            use                             local-service,srv-pnp
            host_name                       <%= @hostname %>
            service_description             Check HTTP
            check_command                   check_nrpe!check_http
            contact_groups                  admins
            contacts                        nagiosadmin 
}

